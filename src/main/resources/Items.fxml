<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="items" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hexrobot.fe5randomizer.controllers.ItemsController">
   <children>
      <CheckBox fx:id="chkMight" mnemonicParsing="false" text="Randomize Might" />
      <HBox fx:id="parMightDelta" alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Delta" />
            <Spinner fx:id="spMightDelta" max="20" min="0" prefWidth="70.0" />
         </children>
      </HBox>
      <CheckBox fx:id="chkAccuracy" mnemonicParsing="false" text="Randomize Accuracy" />
      <HBox fx:id="parAccuracyDelta" alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Delta" />
            <Spinner fx:id="spAccuracyDelta" amountToStepBy="5" max="100" min="0" prefWidth="70.0" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <CheckBox fx:id="chkWeight" mnemonicParsing="false" text="Randomize Weight" />
      <HBox fx:id="parWeightDelta" alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Delta" />
            <Spinner fx:id="spWeightDelta" max="20" min="0" prefWidth="70.0" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <CheckBox fx:id="chkCritical" mnemonicParsing="false" text="Randomize Critical" />
      <HBox fx:id="parCriticalDelta" alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Delta" />
            <Spinner fx:id="spCriticalDelta" amountToStepBy="5" max="50" min="0" prefWidth="70.0" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <CheckBox fx:id="chkUses" mnemonicParsing="false" text="Randomize Uses" />
      <CheckBox fx:id="chkAddBladeEffect" mnemonicParsing="false" text="Add blade effect" />
      <CheckBox fx:id="chkAddSkill" mnemonicParsing="false" text="Randomize wpn skills" />
      <CheckBox fx:id="chkRandomizeScrolls" disable="true" mnemonicParsing="false" text="Randomize scrolls" />
      <HBox alignment="CENTER_RIGHT" disable="true" spacing="10.0">
         <children>
            <Label text="Min" />
            <Spinner fx:id="spScrollsMin" prefWidth="70.0" />
            <Label text="Max" />
            <Spinner fx:id="spScrollsMax" prefWidth="70.0" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
