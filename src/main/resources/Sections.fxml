<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="sections" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hexrobot.fe5randomizer.controllers.SectionsController">
   <children>
      <fx:include fx:id="menuBar" source="MenuBar.fxml" VBox.vgrow="NEVER" />
      <VBox alignment="TOP_CENTER" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="lblTitle" text="Fire Emblem 5 (Un?)Headered" />
            <HBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Label text="File name:" />
                  <Label fx:id="lblFilename" text="filename.smc" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Label text="Size:" />
                  <Label fx:id="lblBytes" text="-1 bytes" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Seed" />
            <ComboBox prefHeight="34.0" prefWidth="60.0" />
            <ComboBox prefHeight="34.0" prefWidth="60.0" />
            <ComboBox prefHeight="34.0" prefWidth="60.0" />
            <ComboBox prefHeight="34.0" prefWidth="60.0" />
            <ComboBox prefHeight="34.0" prefWidth="60.0" />
            <ComboBox prefHeight="34.0" prefWidth="60.0" />
            <Button mnemonicParsing="false" onAction="#generateRandomSeed" text="Random seed">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab closable="false" text="Playable units">
               <content>
                  <fx:include source="Units.fxml" />
               </content>
            </Tab>
          <Tab closable="false" disable="true" text="Classes" />
            <Tab closable="false" disable="true" text="Items" />
            <Tab closable="false" text="Randomize" />
        </tabs>
      </TabPane>
   </children>
</VBox>
