<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="randomize" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hexrobot.fe5randomizer.controllers.RandomizeController">
   <children>
      <Label text="Randomization summary" VBox.vgrow="NEVER" />
      <Pane VBox.vgrow="ALWAYS" />
      <HBox spacing="10.0">
         <children>
            <CheckBox fx:id="chkWriteDebugLog" mnemonicParsing="false" text="Write log" />
            <CheckBox fx:id="chkWriteRom" mnemonicParsing="false" text="Write rom" />
         </children>
      </HBox>
      <HBox VBox.vgrow="NEVER">
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#randomize" text="Randomize" HBox.hgrow="NEVER" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
