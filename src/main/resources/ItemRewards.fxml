<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="itemRewards" fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hexrobot.fe5randomizer.controllers.ItemRewardsController">
	<content>
		<VBox spacing="5.0">
			<children>
				<CheckBox fx:id="chkRandomizeRewards" mnemonicParsing="false" text="Randomize Chest/House rewards" />
            <RadioButton fx:id="rbRewardsRandom" mnemonicParsing="false" selected="true" text="Random" toggleGroup="$tgRewardsRandomization" userData="random">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <toggleGroup>
	           <ToggleGroup fx:id="tgRewardsRandomization" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbRewardsShuffle" mnemonicParsing="false" text="Shuffle" toggleGroup="$tgRewardsRandomization" userData="shuffle">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </RadioButton>
            <CheckBox fx:id="chkIncludeHeldScrolls" mnemonicParsing="false" text="Include held Scrolls">
               <padding>
                  <Insets left="40.0" />
               </padding>
            </CheckBox>
            <RadioButton fx:id="rbRewardsReplace" mnemonicParsing="false" text="Replace for similar items" toggleGroup="$tgRewardsRandomization" userData="replace">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </RadioButton>
				<CheckBox fx:id="chkShopItems" disable="true" mnemonicParsing="false" text="Randomize Shop items" />
				<CheckBox fx:id="chkShopSimilar" disable="true" mnemonicParsing="false" text="Replace for similar items">
					<VBox.margin>
						<Insets left="20.0" />
					</VBox.margin>
				</CheckBox>
			</children>
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</padding>
		</VBox>
	</content>
</ScrollPane>
